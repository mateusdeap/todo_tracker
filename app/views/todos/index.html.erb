<div class="ui padded grid">
  <div class="row">
    <div class="column">
      <% if notice.present? %>  
        <div class="ui positive message">
          <i class="close icon" data-controller="message" data-action="click->message#close"></i>
          <div class="header">
            <%= notice %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <h1>Todos</h1>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <%= render 'form', todo: @todo %>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <table class="ui celled table">
        <thead>
          <tr>
            <th>Completed</th>
            <th>Description</th>
            <th>Last Update</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @todos.each do |todo| %>
            <tr>
              <td><%= check_box_tag :done, 'true', todo.completed, class: 'ui checkbox', data: { reflex: 'click->ExampleReflex#toggle', id: todo.id} %></td>
              <td><%= todo.description %></td>
              <td><%= todo.updated_at %></td>
              <td><%= link_to 'Show', todo %></td>
              <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
              <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="column">
      <%= link_to 'New Todo', new_todo_path, class: 'ui green button' %>
    </div>
  </div>
</div>
